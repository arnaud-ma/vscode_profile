{
  //
  //
  //
  // PYTHON GENERAL
  //
  //
  //
  "[python]": {
    //
    // ruff formatter, see https://github.com/astral-sh/ruff-vscode#example-configurations
    //
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll": true
    },
    //
    // editor
    //
    "editor.rulers": [
      { // PEP8 documentation
        "column": 72,
        "color": "#37ff001b"
      },
      { // PEP8
        "column": 79
      },
      { // black formatter
        "column": 88,
        "color": "#ffff00"
      },
      { // the max of the max
        "column": 120,
        "color": "#ff0000"
      }
    ],
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "files.trimTrailingWhitespace": false
  },
  "python.terminal.activateEnvInCurrentTerminal": true,
  //
  //
  //
  // Formatting / Linting / Type Checking
  //
  //
  //
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.gotoDefinitionInStringLiteral": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.useLibraryCodeForTypes": true,
  "python.analysis.completeFunctionParens": false,
  //
  // - errors
  //
  "python.analysis.diagnosticSeverityOverrides": {
    //"reportMissingTypeStubs": "information" // https://github.com/microsoft/pyright/blob/main/docs/type-stubs.md#generating-type-stubs-in-vs-code
  },
  //
  //
  //
  // EDITOR
  //
  //
  // - font / writing style
  //
  "editor.fontFamily": "'Jetbrains Mono', 'Consolas', 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.lineHeight": 24,
  "editor.matchBrackets": "always",
  "editor.renderWhitespace": "trailing",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.mouseWheelZoom": true,
  //
  // - auto-completion / formatting / linting / highlighting
  //
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.suggest.insertMode": "replace",
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.linkedEditing": true,
  "editor.suggest.showWords": false,
  "editor.occurrencesHighlight": true,
  "editor.acceptSuggestionOnEnter": "smart",
  //
  // - minimap
  //
  "editor.minimap.enabled": true,
  "editor.minimap.size": "fill",
  "editor.minimap.autohide": true,
  //
  //
  //
  // WORKBENCH
  //
  //
  //
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  //
  //
  //
  // FILES
  //
  //
  //
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000, // in ms
  "files.trimTrailingWhitespace": true,
  "files.readonlyInclude": {
    "**/.venv/**": true,
    "**/venv/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.coverage": true,
    "**/.coverage.*": true,
    "**/.hypothesis": true,
    "**/.mypy_cache": true,
    "**/.nox": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.tox": true
  },
  //
  //
  //
  // EXPLORER / SEARCH
  //
  //
  //
  "explorer.autoReveal": false,
  "explorer.copyRelativePathSeparator": "/",
  //
  //
  //
  // TERMINAL
  //
  //
  //
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shellIntegration.suggestEnabled": true,
  "terminal.integrated.unicodeVersion": "11",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.fontFamily": "'MesloLGS NF', 'Cascadia Code', 'Consolas', 'Courier New', monospace",
  //
  //
  //
  // COMMENT HIGHLIGHTING / TODOs
  //
  //
  //
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "todo-tree.highlights.enabled": false, // already done by better comments
  "todo-tree.general.statusBar": "top three",
  "todo-tree.general.showIconsInsteadOfTagsInStatusBar": true,
  "todo-tree.filtering.ignoreGitSubmodules": true,
  "todo-tree.filtering.useBuiltInExcludes": "file excludes",
  "todo-tree.tree.scanMode": "workspace only",
  "todo-tree.general.debug": false,
  "todo-tree.filtering.includeHiddenFiles": true,
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.tree.flat": true,
  "todo-tree.filtering.excludeGlobs": [
    "**/.venv/*/**",
    "**/.tox/**"
  ],
  "todo-tree.general.tags": [
    "BUG",
    "FIXME",
    "TODO",
    "?"
  ],
  //
  //
  //
  // THEMES / CUSTOMIZATION
  //
  //
  //
  "workbench.colorTheme": "One Dark Pro",
  "editor.tokenColorCustomizations": {
    "[One Dark Pro*]": {
      "textMateRules": [
        {
          "name": "italic comment",
          "scope": "comment, punctuation.definition.comment, variable.parameter.language.python",
          "settings": {
            "fontStyle": "italic"
          }
        }
      ]
    }
  },
  "editor.semanticTokenColorCustomizations": {
    "[One Dark Pro*]": {
      "enabled": true,
      "rules": {
        // see https://github.com/Binaryify/OneDark-Pro#python--pylance-users for more rules
        "*.typeHint:python": "#8c8c8c",
        "*.async:python": "#eb78ff",
        "comment": {
          "italic": true
        },
        "*.typeHintComment:python": {
          "foreground": "#8c8c8c",
          "italic": false
        },
        "parameter:python": {
          "italic": true
        },
        "*.abstract:python": {
          "bold": true
        },
        "module:python": {
          "bold": true
        }
      }
    }
  },
  //
  //
  //
  // GIT
  //
  //
  //
  "git.enableSmartCommit": true,
  //
  //
  //
  // MARKDOWN
  //
  //
  //
  "[markdown]": {
    "editor.defaultFormatter": "vscode.markdown-language-features"
  },
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart"
}